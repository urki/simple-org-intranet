{% extends 'SurveyBundle::layout2.html.twig' %}

{% set title = 'Show survey insert'|trans %}


{% block content %}
  {{ parent() }}


<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Time</th>
            <td>{{ entity.time|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Temperature</th>
            <td>{{ entity.temperature }}</td>
        </tr>
        <tr>
            <th>Moisture</th>
            <td>{{ entity.moisture }}</td>
        </tr>
        <tr>
            <th>Note</th>
            <td>{{ entity.note }}</td>
        </tr>
    </tbody>
</table>
{% if app.user == entity.owner %}
<ul class="record_actions">
    <li>
        <a href="{{ path('survey') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('survey_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        
            <form action="{{ path('survey_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
                    <button type="submit">Delete</button>
            </form>
          </li>
        </ul>
    {% endif %}
  {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        {% endif %}

{% endblock content %}
