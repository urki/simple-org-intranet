        <div class="alert alert-error"> {#<button type="button" class="close" data-dismiss="alert">&times;</button> #}
                  {{ error.message }}</div>
             {% endif %}
            <label for="username">Ime:</label>
            <input class="input-block-level" placeholder="Vnesite ime" type="text" id="username" name="_username" value="{{ last_username }}" />

            <label for="password">Geslo:</label>
            <input class="input-block-level" placeholder="Vnesite geslo" type="password" id="password" name="_password" />

    {#
        If you want to control the URL the user is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

            <button class="btn btn-large btn-primary" type="submit">login</button>
        </form>

    </div>
